<header>
    <div class="top-header">
        <div class="contenedor1">
            <div class="logo">
                <a href="/"><img src="/images/Logo Music Box.png" alt="Logo de Music Box"></a>
            </div>
            <div><i class="fas fa-map-marker-alt"></i> Buenos Aires</div>
        </div>
        <div class="contenedor2">
            <form action="/products/search" method="GET">
                
                    <input type="search" name="search" placeholder="Buscá aquí tu producto" class="search-bar">
                    <button type="submit" class="search-button"><i class="fas fa-search"></i></button>
                  
            </form>
        </div>
        <div class="contenedor3">
            <% if (locals.isLogged) { %>
                <div class="loginNavBar">
                    <div class="user-account">
                        <a href="/users/profile"><img src="/images/users/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%;"> </a>
                    </div>
                    <div class="userGreeting">
                       <a href="/users/profile">Hola, <%= locals.userLogged.full_name %></a> 
                    </div>
                    <div class="logout">
                        <a href="/users/logout">Cerrar sesión</a>
                    </div>
                    <div class="carrito">
                        <a href="/shopping-cart"><i class="fas fa-shopping-cart"></i></a>
                    </div>
                </div>
            <% } else { %>
                <div class="register">
                    <a href="/users/register"><i class="fas fa-user-plus"></i> Registrate</a>
                </div>
                <div class="login">
                    <a href="/users/login"><i class="fas fa-user-circle"></i> Iniciá Sesión</a>
                </div>
                <div class="carrito">
                    <a href="/shopping-cart"><i class="fas fa-shopping-cart"></i></a>
                </div>
            <% } %>
            
        </div>
        <div class="burger-menu">
            <ul class="menu">
                <% if (locals.isLogged) { %>
                <li><a href="/users/profile"><img src="/images/users/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%;"> </a> <%= locals.userLogged.full_name %></li>
                <li><a class="menuItem" href="/products">Todos los productos</a></li>
                <li><a class="menuItem" href="/users/profile">Perfil de usuario</a></li>
                <li><a class="menuItem" href="/shopping-cart">Carrito</a></li>
                <li><a class="menuItem" href="/users/logout">Cerrar Sesión</a></li>
              </ul>
                <% } else { %>
                <li><a class="menuItem" href="/products">Todos los productos</a></li>
                <li><a class="menuItem" href="/users/register">Registrate</a></li>
                <li><a class="menuItem" href="/users/login">Iniciá sesión</a></li>
                <li><a class="menuItem" href="/shopping-cart">Carrito</a></li>
                <li><a class="menuItem" href="#">Contacto</a></li>
              </ul>
                <% } %>

                
              <button class="hamburger">
                <!-- material icons https://material.io/resources/icons/ -->
                <i class="menuIcon material-icons">menu</i>
                <i class="closeIcon material-icons">close</i>
              </button>
        </div>
    </div>
    <nav class="navbar">
        <ul>
            <li>
                <a href="/products/">Todos los productos</a>
            </li>
            <li>
                <a href="/products/cuerdas">Cuerdas</a>
            </li>
            <li>
                <a href="/products/percusion">Percusión</a>
            </li>
            <li>
                <a href="/products/viento">Viento</a>
            </li>
            <li>
                <a href="/products/sonido">Sonido</a>
            </li>
            <li>
                <a href="/products/accesorios">Accesorios</a>
            </li>
            <li>
                <a href="/products/taller">Taller</a>
            </li>
        </ul>
    </nav>
    <script src="/javascript/header.js"></script>
</header>